{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "target": "esnext",
    "allowJs": true,
    "paths": {
      "*": [
        "./packages/react-core/dist/esm/*"
      ]
    }
  },
  "include": [
    "packages/**/src/**/*"
  ]
}
